  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
 
    // Line Chart
    const ctx = document.getElementById('myChart');
    const dataElt = document.querySelector('#data')
    const countsArray = dataElt.getAttribute('countsArray').split(',')
   

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
            "Dec",],
            datasets: [{
                label: '# of Votes',
                data: countsArray,
                borderWidth: 1,
                borderColor: 'rgb(255, 206, 86)',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    fetch('/admin/category/count').then(res=>res.json()).then(categoryCount =>{
      console.log(categoryCount)
    // new Doughnut Chart
    const ptx = document.getElementById('pieChart');
    const data = {
        labels: categoryCount.map(elt => `${elt.category} ${elt.count}`),
        datasets: [{
            label: 'My First Dataset',
            data: categoryCount.map(elt =>elt.count),
            //Download Stunning Pie Chart color scheme consisting of #FFF1C9, #F7B7A3, #EA5F89, #9B3192, #57167E and #2B0B3F. This 6 colors palette has been categorised in Pink, Purple and Violet color categories.

            backgroundColor: [
                '#FFF1C9',
                '#F7B7A3',
                '#EA5F89',
                '#9B3192',
                '#57167E',
                '#2B0B3F'
            ],
            hoverOffset: 6  
        }]
    };
    new Chart(ptx, {
        type: 'doughnut',
        data: data,
    });
  })

  

</script>

