    <div id="data" style="display: none;" id="data" countsArray="<%= countsArray %>"></div>
    <div class="col-9 px-4">
      <body>
    <div class="content">
      <div class="container bg-bookso text-center text-light fs-4 fw-bold">
        <p>DASHBOARD</p>
      </div>
     <div class="data-info">
       <div class="box">
         <i class="fas fa-user"></i>
         <div class="data">
           <p>CUSTOMERS</p>
           <span><%= customersCount %></span>
          </div>
        </div>
        <div class="box">
          <i class="fas fa-pen"></i>
          <div class="data">
            <p>CATEGORY</p>
            <span><%= category %></span>
          </div>
        </div>
        <div class="box">
            <i class="fas fa-table"></i>
            <div class="data">
              <p>ORDERS</p>
              <span><%= orders %></span>
            </div>
          </div>
          <div class="box">
            <i class="fas fa-cubes-stacked"></i>
            <div class="data">
              <p>Products</p>
              <span><%= productsCount %></span>
            </div>
          </div>
          
        </div>
       <a class="text-decoration-none " href="/admin/products"> <div class="container btn-global-primary text-center text-light fs-4 fw-bold mt-3 ms-2 ">
          <p class="mt-2">PRODUCTS</p>
        </div></a>
      </div>
      <div class="w-75 d-flex" >
        <!-- Line Chart -->
        <canvas id="myChart"></canvas>
        <div class="w-50">
        <canvas id="pieChart"></canvas>
        </div>
        </div>
      
    </div>
  </div>
</body>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
 
    // Line Chart
    const ctx = document.getElementById('myChart');
    const dataElt = document.querySelector('#data')
    const countsArray = dataElt.getAttribute('countsArray').split(',')
   

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
            "Dec",],
            datasets: [{
                label: '# of Votes',
                data: countsArray,
                borderWidth: 1,
                borderColor: 'rgb(255, 206, 86)',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    fetch('/admin/category/count').then(res=>res.json()).then(categoryCount =>{
      console.log(categoryCount)
    // new Doughnut Chart
    const ptx = document.getElementById('pieChart');
    const data = {
        labels: categoryCount.map(elt => `${elt.category} ${elt.count}`),
        datasets: [{
            label: 'My First Dataset',
            data: categoryCount.map(elt =>elt.count),
            backgroundColor: [
                '#000000',
                '#00ffff',
                '#ff00ff',
                '#',
                'rgba(160, 204, 160, 0.9)',
                'rgba(255, 0, 0, 0.2)'
            ],
            hoverOffset: 6  
        }]
    };
    new Chart(ptx, {
        type: 'doughnut',
        data: data,
    });
  })

</script>

