<script>
    function showToast(message, style) {
      const toast = document.getElementById('toastMessage');
      
      switch(style){
        case "error":{
          toast.classList.add("alert-danger");
          break;
        }
        case "warning":{
          toast.classList.add("alert-warning");
          break;
        }
        
        default: {
          toast.classList.add("alert-primary");
          break;
        }

      }
  
  
  
  toast.textContent = message;
  toast.style.opacity = '100%';
  toast.style.display = 'block';
  toast.style.top = window.scrollY + 30 + 'px';
  setTimeout(function() {
    toast.style.opacity = '0%';
    toast.style.display = 'none';
  }, 2000);
}
</script>
