<form action="/admin/coupons" method="post">
  <div class="col-11 ms-3 shadow" style="height:300px;">
    <div class="fw-bold text-center mt-3">ADD COUPON</div>
    <hr style="height: 3px">

    <div class="col-3 d-flex">
      <div class="me-4 ms-5">
        <label for="coupon_code" class="ms-5">Coupon Code</label>
        <input name="coupon_code" id="coupon_code" type="text" class="ms-2">
      </div>
      <div class="ms-4 me-4">
        <label for="discount" class="ms-5">Discount</label>
        <input name="discount" id="discount" type="text" class="ms-2">
      </div>
      <div class="ms-4 me-4">
        <label for="max_count" class="ms-5">Max Count</label>
        <input name="max_count" id="max_count" type="text" class="ms-2">
      </div>
    </div>

    <div class="col-3 d-flex mt-5">
      <div class="me-4 ms-5">
        <label for="start_date" class="ms-5">Start Date</label>
        <input name="start_date" id="start_date" type="text" class="ms-2"  placeholder="DD/MM/YY">

      </div>
      <div class="ms-4 me-4">
        <label for="expiry_date" class="ms-5">Expiry Date</label>
        <input name="expiry_date" id="expiry_date" type="text" class="ms-2" placeholder="DD/MM/YY">

      </div>
      <div class="ms-4 me-4">
        <label for="used_coupon" class="ms-5">Used Count</label>
        <input name="used_coupon" id="used_coupon" type="text" class="ms-2">
      </div>
    </div>
    <div class="w-100 d-flex justify-content-center"><button class="mx-auto btn-global-primary mt-4 fw-bold" type="submit">Submit</button></div>
  </form>
</div>
