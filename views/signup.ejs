    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      const nameInput = document.querySelector('input[name="name"]');
      const phoneInput = document.querySelector('input[name="phone"]');
      const passwordInput = document.querySelector('input[name="password"]');
      const confirmPassword = document.querySelector('input[name="confirmPassword"]');
      const signupInput = document.querySelector("#signup-form");
      const erromsg = document.querySelector("#error-message");

      const phoneRegex = /^\+[0-9]{1,3}-[0-9]{1,14}$/;
      const passwordRegex =
        /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$%^&*])[a-zA-Z\d@#$%^&*]{8,}$/;
      const nameRegex = /^[A-Za-z]+$/;

      const ValidateName = () => {
        if (!nameRegex.test(nameInput.value)) {
          erromsg.innerHTML =
            "Name needed atleast 2 charcters without number and special characters";
          erromsg.classList.remove("hide");
          return false;
        } else {
          erromsg.innerHTML = " ";
          erromsg.classList.add("hide");
          return true;
        }
      };
      nameInput.addEventListener("blur", () => {
        ValidateName();
      });

      // if(!`${nameInput.value}.length`>=2 && `${nameInput.value}`.length<=30){
      //   erromsg.innerHTML="Name need atleast 2 charcters"
      //   erromsg.classList.add("hide");
      // }

      const ValidatePhone = () => {
        if (
          `${phoneInput.value}`.length > 9 &&
          `${phoneInput.value}`.length < 14
        ) {
          erromsg.classList.add("hide");
          return true;
        } else {
          erromsg.innerHTML = "Type a Valid Phone Number";
          erromsg.classList.remove("hide");
          return false;
        }
      };

      phoneInput.addEventListener("blur", () => {
        ValidatePhone();
      });

      const ValidatePassword = () => {
        if (!passwordRegex.test(passwordInput.value)) {
          erromsg.innerHTML =
            "Require atleast 8 characters,including one uppercase,special Charcter and a number.";
          erromsg.classList.remove("hide");
          return false;
        } else {
          erromsg.innerHTML = " ";
          erromsg.classList.add("hide");
          return true;
        }
      };
      passwordInput.addEventListener("blur", () => {
        ValidatePassword();
      });

      const ValidConfirmPassword = ()=>{
        if(!(passwordInput.value === confirmPassword.value)){
          erromsg.innerHTML="Password Incorrect"
          erromsg.classList.remove("hide");
          return false;
        }else{
          erromsg.classList.add("hide")
          return true;
        }
      }
      confirmPassword.addEventListener("blur",()=>{
        ValidConfirmPassword();
      })
     

      signupInput.addEventListener("submit", (event) => {
        if (ValidateName() && ValidatePhone() && ValidatePassword()&& ValidConfirmPassword()) { 
        }
        else{
          event.preventDefault();
        }
      });
    </script>
