                      </div>

                      <div class="form-outline mb-2">
                        <!-- <label class="form-label" for="form2Example11">Username</label> -->
                        <input
                          type="password"
                          id="password"
                          class="form-control"
                          name="password"
                          placeholder="Enter Your Password"
                        />
                      </div>

                      <div class="form-outline mb-2">
                        <!-- <label class="form-label" for="form2Example11">Username</label> -->
                        <input
                          type="password"
                          id="confirmPassword"
                          class="form-control"
                          name="confirmPassword"
                          placeholder="Confirm Your Password"
                        />
                      </div>

                      <div
                        class="alert alert-danger hide"
                        role="alert"
                        id="error-message"
                      ></div>

                      <% if (message) { %>
                        <div
                        class="alert alert-danger"
                        role="alert"
                        id="error-message"
                        ><%= message%></div>
                        <% } %>

                      <div class="text-center pt-1 mb-5 pb-1">
                        <!-- <a class="text-muted mb" href="#!">Forgot your password?</a><br> -->
                        <button class="btn-global-primary mt-4" type="submit">
                          CREATE ACCOUNT
                        </button>
                      </div>
                    </form>
