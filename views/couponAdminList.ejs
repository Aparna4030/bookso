<%- include('partials/head.ejs') %> 
<%- include('partials/navbar.ejs') %>
<%-include('partials/adminSidebar.ejs') %>


<div class="col-10 px-4">
  <div class="d-flex">
    <a  href="/admin/coupons"  class="btn-global-secondary mt-4 fw-bold">ADD COUPON</a></div>
    <div class="d-flex mt-3 ">
      <input class="form-control mx-2" id="search" type="search" placeholder="Search Product" aria-label="Search">
      <button class="btn btn-outline-dark mx-auto" id="searchButton" >Search</button>
    </div>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Coupon <Code></Code></th>
            <th scope="col">Discount</th>
            <th scope="col">Max Count</th>
            <th scope="col">Start Date</th>
            <th scope="col">Expiry Date</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="tableData">
            <% let i = 1 %>
           <% coupons.forEach(coupon => { %> 
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= coupon.couponCodes %></td>
              <td><%= coupon.discount_value %></td>
              <td><%= coupon.PurchaseLimit %></td>
              <td><%= coupon.startDate %></td>
              <td><%= coupon.endDate %></td>
              <td><a href="/admin/delete/<%= coupon._id %>" class="btn btn-danger fw-bold me-2">Delete</a></td>  
            </tr>
            
            <% i++ %>
            <% }) %>
              
        </tbody>
      </table>
  </div>
  
  </div>

<%- include('partials/closingHead.ejs') %>

