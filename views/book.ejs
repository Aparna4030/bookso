<%- include('partials/head.ejs') %> 
<%- include('partials/navbar.ejs') %>
<div class="container d-flex flex-wrap ">
    <% if (!(products.length>0)) { %>
     <h2>No products to show</h2>
    <% } %>
    <% products.forEach(product => { %>
        <div class="card mt-3 me-3" style="width: 16rem;">
            <a href="/product/<%= product._id %>">
            <img src="../uploads/<%=  product.image[0] %>" class="card-img-top w-50" alt="..." style="margin-left: 60px"></a>
            <div class="card-body shadow h-25">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text text-primary">â‚¹<%= product.price %></p>
            </div>
            </div>
    <% }) %>
    
</div>
<div class="d-flex p-4 align-items-center justify-content-center">

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <% if (currentPage>1) { %>
                <li class="page-item"><a class="page-link" href="/bookShop?pg=<%= currentPage -1 %>">Previous</a></li>
            <% } %>
            <% if (currentPage >1) { %>
                <li class="page-item"><a class="page-link" href="/bookShop?pg=<%= currentPage*1 -1 %> %>"><%= currentPage - 1 %></a></li>
            <% } %>
            <li class="page-item active"><a class="page-link" href="/bookShop?pg=<%= currentPage %>"><%= currentPage %></a></li>
            <% if (products.length>0) { %>
            <li class="page-item"><a class="page-link" href="/bookShop?pg=<%= currentPage*1 + 1 %>"><%= currentPage*1 + 1 %></a></li>
                <li class="page-item"><a class="page-link" href="/bookShop?pg=<%= currentPage*1 + 1 %>">Next</a></li>
                <% } %>
        </ul>
    </nav>
</div>
  
<%- include('partials/closingHead.ejs') %>